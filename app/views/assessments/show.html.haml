.row
  .col-md-8
    = box @assessment.name do |box|
      %table.table
        %tr
          %th= @assessment.class.human_attribute_name :name
          %td= @assessment.name
        %tr
          %th= @assessment.class.human_attribute_name :discipline
          %td= @assessment.discipline
        %tr
          %th= @assessment.class.human_attribute_name :gender
          %td= t("gender.#{@assessment.gender}")

  - if logged_in?
    .col-md-4
      = box("Aktionen") do
        = link_btn "Bearbeiten", edit_assessment_path(@assessment)
        %br
        = link_btn "Löschen", assessment_path(@assessment), method: :delete, data: { confirm: 'Wertungsgruppe wirklich löschen? Dies ist nur möglich, wenn keine Ergebnisse verknüpft sind.' }