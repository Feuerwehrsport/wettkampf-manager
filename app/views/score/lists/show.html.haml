.row.refreshable#score-list-show
  .col-md-9
    = box @score_list.name do |box|
      %table.table
        = render 'list_headline', times: true
        %tbody
          - score_list_entries do |entry, run, track|
            = render layout: 'list_entry', locals: { entry: entry, run: run, track: track } do |first|
              %td.time-col
                = result_for entry
                - if logged_in?
                  .pull-right
                    - if first && @score_list.open?
                      = short_edit_link edit_score_list_run_path(@score_list, run: run), title: "Zeiten bearbeiten", class: "btn-xs"
                    - if @score_list.open? && entry
                      = short_destroy_link destroy_entity_score_list_path(@score_list, entry_id: entry.id), title: "Aus Liste entfernen", class: "btn-xs", remote: true
      - box.footer do
        = link_btn "als PDF", format: :pdf
        = link_btn "als XLS", format: :xlsx

  - if logged_in?
    .col-md-3
      = box("Aktionen") do
        - if @score_list.open?
          = link_to "Liste abschließen", { action: :finished }, remote: true, class: "btn btn-default btn-sm btn-block"
          = link_to "Reihenfolge bearbeiten", { action: :move }, class: "btn btn-default btn-sm btn-block"
          = link_to "Zeiten im Block eintragen", { action: :edit_times }, class: "btn btn-default btn-sm btn-block"
          = link_to "Teilnehmer hinzufügen", { action: :select_entity }, remote: true, class: "btn btn-default btn-sm btn-block"

        - else
          = link_to "Liste öffnen", { action: :finished }, remote: true, class: "btn btn-default btn-sm btn-block"

      - if @score_list.open?
        = box("Allgemein") do
          = link_to "Bearbeiten", { action: :edit }, class: "btn btn-default btn-sm btn-block"
          = link_to "Löschen", { action: :destroy }, method: :delete, data: { confirm: 'Startliste wirklich löschen? Alle bisher eingetragenen Zeiten dieser Liste gehen verloren!' }, class: "btn btn-default btn-sm btn-block"
