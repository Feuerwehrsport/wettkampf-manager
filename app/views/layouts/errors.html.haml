!!!
%html
  %head
    %meta{ charset: 'UTF-8' }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }/
    %style{ type: 'text/css' }!= Rails.application.assets_manifest.find_sources('application.css').first
    %script{ type: 'text/javascript' }!= Rails.application.assets_manifest.find_sources('application.js').first

    %title= @page_title

  %body
    %nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{ 'aria-controls' => 'navbar', 'aria-expanded' => 'false', 'data-target' => '#navbar', 'data-toggle' => 'collapse', type: 'button' }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand.hidden-lg.hidden-md.hidden-sm{ href: root_path } Wettkampf-Manager
        .navbar-collapse.collapse#navbar
          %ul.nav.navbar-nav
            - main_menu_items.each do |item|
              %li{ "/#{controller_path}" == item.controller_path ? { class: 'active' } : {} }= link_to(item.label, item.url)

    .container
      = yield
