.row
  .col-md-12
    = box "Deutschland-Pokal 2015" do |box|
      %table.table
        - @results.each do |result|
          %tr
            %td
              = discipline_image(result.assessment.discipline)
              = result.to_s
            %td.text-right
              = link_to "Ansehen", url_for(action: :show, id: result.id), class: "btn btn-sm btn-default"
        
      - box.footer do
        .pull-right
          = link_btn "als PDF", url_for(format: :pdf)
          = link_btn "als XLS", url_for(format: :xlsx)
        .clearfix